@model serveurJDRMVC.ViewModel.PersoViewModel
@{
    ViewBag.Title = "CreateSousRace";
}

<h2>CreateSousRace</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("labelSousRace", "Sous race", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SousRace", new SelectList(ViewBag.sousRaces, "Id", "Nom"));
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}
